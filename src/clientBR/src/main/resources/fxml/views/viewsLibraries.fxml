<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="1500.0" styleClass="ancorpane" stylesheets="@../../css/CommonFeatures.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uninsubria.client.controller.homepage.libreria.LibraryListController">
   <children>
      <Label layoutX="14.0" layoutY="66.0" styleClass="libraryTitle" stylesheets="@../../css/CommonFeatures.css" text="%library.recent">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
       <HBox fx:id="recentlyOpenedContainer" maxHeight="250.0" prefHeight="250.0" prefWidth="675.0" spacing="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="125.0">
          <children>
             <!-- I libri recentemente aperti verranno aggiunti dinamicamente qui -->
          </children>
       </HBox>
      <Label layoutX="8.0" layoutY="375.0" styleClass="libraryTitle" text="%library.recentLibrary">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
       <VBox layoutX="1000.0" layoutY="164.0" prefHeight="522.0" prefWidth="472.0" styleClass="scrollPaneLibrary" stylesheets="@../../css/CommonFeatures.css">
         <children>
            <ScrollPane fitToWidth="true" prefHeight="611.0" prefWidth="472.0">
               <content>
                  <VBox fx:id="libraryContainer" prefHeight="200.0" prefWidth="100.0" spacing="12.0" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
       <Label layoutX="1078.0" layoutY="36.0" styleClass="libraryTitle" stylesheets="@../../css/CommonFeatures.css" text="%library.libraries">
          <font>
             <Font name="System Bold" size="20.0" />
          </font>
       </Label>
       <VBox layoutX="1000.0" layoutY="74.0" prefHeight="80.0" prefWidth="472.0" spacing="5.0" styleClass="vboxtransparent" stylesheets="@../../css/CommonFeatures.css">
          <children>
             <HBox alignment="CENTER" prefHeight="30.0" prefWidth="472.0" spacing="10.0">
                <children>
                   <TextField fx:id="searchField" prefHeight="25.0" prefWidth="300.0" promptText="%library.search.prompt" styleClass="searchBarButtonHome" stylesheets="@../../css/CommonFeatures.css" />
                   <ComboBox fx:id="filterComboBox" prefHeight="25.0" prefWidth="150.0" promptText="%library.filter" styleClass="searchBarButtonHome" stylesheets="@../../css/CommonFeatures.css" />
                </children>
             </HBox>
             <HBox fx:id="statsContainer" alignment="CENTER" prefHeight="40.0" prefWidth="472.0" spacing="15.0" styleClass="recapHBOX" stylesheets="@../../css/CommonFeatures.css">
                <children>
                   <Label fx:id="totalLibrariesLabel" styleClass="labelLibrary" stylesheets="@../../css/CommonFeatures.css" text="%libraries.stats.libraries" />
                   <Label fx:id="totalBooksLabel" styleClass="labelLibrary" stylesheets="@../../css/CommonFeatures.css" text="%libraries.stats.books" />
                   <Label fx:id="emptyLibrariesLabel" styleClass="labelLibrary" stylesheets="@../../css/CommonFeatures.css" text="%libraries.stats.empty" />
                   <Label fx:id="avgBooksLabel" styleClass="labelLibrary" stylesheets="@../../css/CommonFeatures.css" text="%libraries.stats.average" />
                </children>
             </HBox>
          </children>
       </VBox>
        <Button fx:id="createNewLibrary" layoutX="1321.0" layoutY="41.0" mnemonicParsing="false" styleClass="searchBarButtonHome" stylesheets="@../../css/CommonFeatures.css" text="%libraries.button.create" />
        <Button fx:id="removeOldLibrary" layoutX="1360.0" layoutY="41.0" mnemonicParsing="false" styleClass="searchBarButtonHome" stylesheets="@../../css/CommonFeatures.css" text="%libraries.button.remove" />
   </children>
</AnchorPane>

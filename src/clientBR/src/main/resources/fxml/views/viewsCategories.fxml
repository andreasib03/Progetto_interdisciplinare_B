<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ProgressIndicator?>

<AnchorPane prefHeight="600.0" prefWidth="1012.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uninsubria.client.controller.homepage.categories.CategoriesController">
   <children>
      <!-- Header Section -->
      <VBox spacing="10.0" styleClass="vboxtransparent" stylesheets="@../../css/CommonFeatures.css" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Title -->
            <Label prefWidth="1000.0" styleClass="categoriesTitle" stylesheets="@../../css/CommonFeatures.css" text="%categories.title" VBox.vgrow="ALWAYS" />

            <!-- Statistics -->
            <Label fx:id="statsLabel" prefHeight="20.0" prefWidth="972.0" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;" text="%categories.loading" />

            <!-- Search and Sort Controls -->
            <VBox fx:id="mainContainer" spacing="15.0" styleClass="vboxtransparent" stylesheets="@../../css/CommonFeatures.css">
               <children>
                  <!-- This will be populated by the controller -->
               </children>
            </VBox>
         </children>
      </VBox>

       <!-- Categories Grid -->
       <ScrollPane fitToWidth="true" layoutY="169.0" prefHeight="411.0" prefWidth="760.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="169.0">
          <content>
             <FlowPane fx:id="categoriesGrid" columnHalignment="CENTER" rowValignment="CENTER" style="-fx-background-color: transparent;" />
          </content>
       </ScrollPane>

       <!-- Loading Progress Indicator -->
       <VBox fx:id="loadingContainer" alignment="CENTER" layoutY="200.0" prefHeight="200.0" prefWidth="760.0" style="-fx-background-color: rgba(255, 255, 255, 0.9);" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="200.0">
          <children>
             <ProgressIndicator fx:id="loadingProgress" prefHeight="50.0" prefWidth="50.0" />
             <Label fx:id="loadingLabel" style="-fx-font-size: 16px; -fx-text-fill: #34495e;" text="%categories.loading.categories" VBox.vgrow="ALWAYS" />
          </children>
       </VBox>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="categoryDetailRoot" stylesheets="@../../css/CommonFeatures.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uninsubria.client.controller.homepage.categories.CategoryDetailController">
   <children>
      <!-- Header Section -->
      <VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Navigation and Title -->
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                     <Button fx:id="backButton" mnemonicParsing="false" styleClass="categoryBackButton" text="" />
                  <VBox spacing="5.0">
                     <children>
                           <Label fx:id="categoryTitleLabel" styleClass="categoryTitleLabel" text="" />
                           <Label fx:id="statsLabel" styleClass="categoryStatsLabel" text="" />
                     </children>
                  </VBox>
               </children>
            </HBox>

             <!-- Search and Sort Controls -->
             <HBox alignment="CENTER_LEFT" spacing="15.0">
                <children>
                   <HBox alignment="CENTER_LEFT" spacing="10.0">
                      <children>
                           <TextField fx:id="searchField" prefWidth="300.0" promptText="" styleClass="categorySearchField" />
                            <Button fx:id="resetFiltersButton" mnemonicParsing="false" styleClass="categoryResetButton" text="" />
                            <Button fx:id="reloadButton" mnemonicParsing="false" styleClass="categoryReloadButton" text="" />
                      </children>
                   </HBox>
                   <HBox alignment="CENTER_LEFT" spacing="10.0">
                      <children>
                            <Label styleClass="categorySortLabel" text="Sort by:" />
                          <ComboBox fx:id="sortComboBox" prefWidth="200.0" styleClass="categorySortComboBox" />
                      </children>
                   </HBox>
                </children>
             </HBox>
         </children>
      </VBox>

       <!-- Books List -->
       <VBox spacing="0.0" styleClass="categoryBooksContainer" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="140.0">
          <children>
             <ListView fx:id="booksListView" styleClass="categoryBooksListView" VBox.vgrow="ALWAYS" />
          </children>
       </VBox>

       <!-- Empty state -->
       <VBox fx:id="emptyStateContainer" alignment="CENTER" spacing="20.0" visible="false" styleClass="categoryEmptyState" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <children>
             <FontIcon iconLiteral="fas-book-open" iconSize="64" styleClass="categoryEmptyIcon" />
               <Label styleClass="categoryEmptyTitle" text="No books found" />
               <Label styleClass="categoryEmptyMessage" text="This category appears to be empty or there was an error loading the books." />
          </children>
       </VBox>
   </children>
</AnchorPane>

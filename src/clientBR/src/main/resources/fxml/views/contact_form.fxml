<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uninsubria.client.controller.homepage.help.ContactFormController">
    
    <children>
        <VBox alignment="CENTER" layoutX="50" layoutY="50" prefWidth="400" spacing="20" styleClass="vboxtransparent" stylesheets="@../../css/CommonFeatures.css">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Contattaci" />

                <VBox alignment="CENTER" spacing="5" styleClass="vboxtransparent" stylesheets="@../../css/CommonFeatures.css">
                    <Label stylesheets="@../../css/CommonFeatures.css" text="Oggetto:">
               <font>
                  <Font size="14.0" />
               </font></Label>
                    <TextField fx:id="subjectField" promptText="Inserisci oggetto" styleClass="text-field" stylesheets="@../../css/CommonFeatures.css" />
                </VBox>

                
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: transparent;">
                    <Label stylesheets="@../../css/CommonFeatures.css" text="Messaggio:" />
                    <TextArea fx:id="messageArea" prefRowCount="6" promptText="Scrivi il tuo messaggio..." styleClass="text-area" stylesheets="@../../css/CommonFeatures.css" />
                </VBox>

                <Button maxWidth="100" onAction="#onSendClicked" stylesheets="@../../css/CommonFeatures.css" text="Invia" />
        </VBox>
    </children>
</AnchorPane>
